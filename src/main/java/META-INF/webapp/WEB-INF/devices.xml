<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
           http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa-1.1.xsd">

	<import resource="devices-schedule.xml" />

	<!-- white -->
	<bean id="lighting-white-weekday-time" class="net.phyokyaw.jaquapi.dao.model.DateTimeMode.OnOfftime">
		<constructor-arg value="13" />
		<constructor-arg value="0" />
		<constructor-arg value="22" />
		<constructor-arg value="0" />
	</bean>

	<bean id="lighting-white-week-day" class="net.phyokyaw.jaquapi.dao.model.DateTimeMode.DaySchedule">
		<constructor-arg>
			<list>
				<ref bean="lighting-white-weekday-time" />
			</list>
		</constructor-arg>
		<constructor-arg ref="week-day-list" />
	</bean>

	<bean id="lighting-white-weekend-time" class="net.phyokyaw.jaquapi.dao.model.DateTimeMode.OnOfftime">
		<constructor-arg value="11" />
		<constructor-arg value="0" />
		<constructor-arg value="21" />
		<constructor-arg value="0" />
	</bean>

	<bean id="lighting-white-week-end" class="net.phyokyaw.jaquapi.dao.model.DateTimeMode.DaySchedule">
		<constructor-arg>
			<list>
				<ref bean="lighting-white-weekend-time" />
			</list>
		</constructor-arg>
		<constructor-arg ref="week-end-list" />
	</bean>

	<bean id="lighting-white" class="net.phyokyaw.jaquapi.dao.model.Device">
		<constructor-arg value="Lighting 2" />
		<property name="mode">
			<bean class="net.phyokyaw.jaquapi.dao.model.DateTimeMode">
				<constructor-arg>
					<list>
						<ref bean="lighting-white-week-day" />
						<ref bean="lighting-white-week-end" />
					</list>
				</constructor-arg>
			</bean>
		</property>
	</bean>

	<!-- blue -->
	<bean id="lighting-blue-weekday-time" class="net.phyokyaw.jaquapi.dao.model.DateTimeMode.OnOfftime">
		<constructor-arg value="12" />
		<constructor-arg value="0" />
		<constructor-arg value="22" />
		<constructor-arg value="30" />
	</bean>

	<bean id="lighting-blue-week-day" class="net.phyokyaw.jaquapi.dao.model.DateTimeMode.DaySchedule">
		<constructor-arg>
			<list>
				<ref bean="lighting-blue-weekday-time" />
			</list>
		</constructor-arg>
		<constructor-arg ref="week-day-list" />
	</bean>

	<bean id="lighting-blue-weekend-time" class="net.phyokyaw.jaquapi.dao.model.DateTimeMode.OnOfftime">
		<constructor-arg value="11" />
		<constructor-arg value="0" />
		<constructor-arg value="21" />
		<constructor-arg value="30" />
	</bean>

	<bean id="lighting-blue-week-end" class="net.phyokyaw.jaquapi.dao.model.DateTimeMode.DaySchedule">
		<constructor-arg>
			<list>
				<ref bean="lighting-blue-weekend-time" />
			</list>
		</constructor-arg>
		<constructor-arg ref="week-end-list" />
	</bean>

	<bean id="lighting-blue" class="net.phyokyaw.jaquapi.dao.model.Device">
		<constructor-arg value="Lighting 1" />
		<property name="mode">
			<bean class="net.phyokyaw.jaquapi.dao.model.DateTimeMode">
				<constructor-arg>
					<list>
						<ref bean="lighting-blue-week-day" />
						<ref bean="lighting-blue-week-end" />
					</list>
				</constructor-arg>
			</bean>
		</property>
	</bean>

	<!-- refulight -->

	<bean id="refulight" class="net.phyokyaw.jaquapi.dao.model.Device">
		<constructor-arg value="Refugium Light" />
		<property name="mode">
			<bean class="net.phyokyaw.jaquapi.dao.model.DateTimeMode">
				<constructor-arg value="20" />
				<constructor-arg value="00" />
				<constructor-arg value="08" />
				<constructor-arg value="00" />
			</bean>
		</property>
	</bean>

	<!-- ATO -->
	<bean id="ato" class="net.phyokyaw.jaquapi.dao.model.Device">
		<constructor-arg value="Auto topup" />
	</bean>

	<bean id="pump" class="net.phyokyaw.jaquapi.dao.model.Device">
		<constructor-arg value="Return Pump" />
	</bean>
	
	<bean id="skimmer" class="net.phyokyaw.jaquapi.dao.model.Device">
		<constructor-arg value="Skimmer" />
	</bean>

	<bean id="heater" class="net.phyokyaw.jaquapi.dao.model.Device">
		<constructor-arg value="Heater" />
	</bean>

	<bean id="i2cDevices" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<ref bean="lighting-white" />
				<ref bean="lighting-blue" />
				<ref bean="pump" />
				<ref bean="skimmer" />
				<ref bean="refulight" />
				<ref bean="heater" />
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="waterchange" class="net.phyokyaw.jaquapi.dao.model.Programme">
		<property name="devices" ref="" />
	</bean>
</beans>